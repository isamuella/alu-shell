#!/usr/bin/env bash
# Manage the manage_my_process script

PID_FILE="/var/run/my_process.pid"

if [ "${1}" == "start" ]; then
    ./manage_my_process &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started with PID $(cat $PID_FILE)"

elif [ "${1}" == "stop" ]; then
    if [ -f "$PID_FILE" ]; then
        kill "$(cat $PID_FILE)"
        rm "$PID_FILE"
        echo "manage_my_process stopped"
    else
        echo "No PID file found, process might not be running."
    fi

elif [ "${1}" == "restart" ]; then
    if [ -f "$PID_FILE" ]; then
        kill "$(cat $PID_FILE)"
        rm "$PID_FILE"
        echo "manage_my_process stopped"
    fi
    ./manage_my_process &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process restarted with PID $(cat $PID_FILE)"

else
    echo "Usage: manage_my_process {start|stop|restart}"
fi

