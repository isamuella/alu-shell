#!/usr/bin/env bash
# display files

#to check if the file exists
if [ -e "school" ]; then
	echo "school file exists"


# to check if the file is empty or not
if [ -d "school" ]; then
	cd "school"

if [ ! -s "school" ]; then
echo "school file is empty"
else
echo "school file is not empty"
fi
cd ..
fi

# to check if the file is a regular file
if [ -f "school" ]; then
	if [ ! -s "school" ]; then
	echo "school file is empty"
else
	echo "school file is not empty"
fi
	echo "school is a reular file"
fi

else
echo "school file does not exist"
fi
