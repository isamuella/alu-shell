#!/usr/bin/env bash
# display files

if [ -e "school" ]; then
echo "school file exists"

# to check if the file is empty
if [ ! -s "school" ]; then
echo "school file is empty"
else
echo "school file is not empty"
fi

# to check if the file is a regular file
if [ -f "school" ]; then
echo "school file is a regular file"
fi

else
echo "school file does not exist"
fi
